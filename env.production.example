# LeexDoc Production Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://leexdoc:YOUR_POSTGRES_PASSWORD@postgres:5432/leexdoc

# ===========================================
# REDIS CONFIGURATION
# ===========================================
# Redis URL for caching and job queues
REDIS_URL=redis://redis:6379

# ===========================================
# AUTHENTICATION
# ===========================================
# NextAuth.js configuration
NEXTAUTH_URL=https://leexdoc.tural.digital
NEXTAUTH_SECRET=YOUR_VERY_STRONG_SECRET_KEY_HERE_MINIMUM_32_CHARACTERS

# ===========================================
# STORAGE CONFIGURATION (MinIO/S3)
# ===========================================
# Storage provider (s3 for MinIO or AWS S3)
STORAGE_PROVIDER=s3

# MinIO Configuration
S3_ENDPOINT=http://minio:9000
S3_BUCKET=leexdoc
S3_ACCESS_KEY=YOUR_MINIO_ACCESS_KEY
S3_SECRET_KEY=YOUR_MINIO_SECRET_KEY
S3_REGION=us-east-1

# MinIO Admin Credentials
MINIO_ROOT_USER=YOUR_MINIO_ACCESS_KEY
MINIO_ROOT_PASSWORD=YOUR_MINIO_SECRET_KEY

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Rate limiting (optional)
RATE_LIMIT_REDIS_URL=redis://redis:6379

# File upload limits
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=mp3,wav,ogg,m4a,aac,mp4,avi,mov,wmv,flv,webm,pdf,doc,docx,txt,rtf

# ===========================================
# LOGGING
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ===========================================
# MONITORING (Optional)
# ===========================================
# Health check endpoint
HEALTH_CHECK_ENABLED=true

# ===========================================
# PWA CONFIGURATION
# ===========================================
# PWA settings
PWA_ENABLED=true
PWA_NAME=LeexDoc
PWA_SHORT_NAME=LeexDoc
PWA_DESCRIPTION=Document and Media Management System
PWA_THEME_COLOR=#eab308
PWA_BACKGROUND_COLOR=#ffffff

# ===========================================
# CAPROVER SPECIFIC
# ===========================================
# CapRover will automatically set these
# CAPROVER_APP_NAME=leexdoc
# CAPROVER_DOMAIN=leexdoc.tural.digital
